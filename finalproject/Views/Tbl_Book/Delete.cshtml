@model finalproject.Models.Tbl_Books

@if (Session["Admin_id"] != null && Session["Admin_email"] != null)
{
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";

}
else
{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Book Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book_name)
        </dd>

        <dt>
            Book Edition
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book_Edition)
        </dd>

        <dt>
            Book Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book_price)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.Book_img)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book_img)
            </dd>*@

        <dt>
            Book Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.auth_id)
        </dd>

        <dt>
            Book Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book_categoryy.cat_name)
        </dd>

        <dt>
            Book Publisher
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pub_id)
        </dd>

        <dt>
            Created By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tbl_Vendorr.Vendor_name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-info" href="@Url.Action("Index")">Back to List</a>

            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
