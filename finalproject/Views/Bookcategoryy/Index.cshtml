@model IEnumerable<finalproject.Models.Book_categoryy>

@{
    ViewBag.Title = "Index";
}

<h2>All Categories </h2>

<a class="btn btn-info btn-lg" href="@Url.Action("Create")">Add Category</a>
<br />
<br />
<table class="table table-striped table-responsive">

    <tr>
        <th>
            Name
        </th>
        <th>
            Catefory Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cat_name)
            </td>
        <td>
                    @Html.DisplayFor(modelItem => item.cat_status)
                </td>
            <td>
                <a class="btn btn-success btn-sm" href="@Url.Action("Edit", new { id = item.cat_id })">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.cat_id })">Delete</a>


                <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.cat_id })">Details</a>

            </td>
        </tr>
    }

</table>
