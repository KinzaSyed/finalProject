@model finalproject.Models.Book_publisher

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <a class="btn btn-info btn-sm" href="@Url.Action("Index")">Back to List</a>
    <hr />
   
    <dl class="dl-horizontal">
        <dt>
            Publisher Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pub_name)
        </dd>

        <dt>
            Publisher Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pub_email)
        </dd>

        <dt>
            Publisher Contact
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pub_contact)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-success btn-sm" href="@Url.Action("Edit", new { id = Model.pub_id})">Update Profile</a>

</p>
