@model IEnumerable<finalproject.Models.Book_publisher>

@{
    ViewBag.Title = "Index";
}

<h2>All Publishers</h2>

<a class="btn btn-info btn-lg" href="@Url.Action("Create")">Add Publisher</a>
<br />
<br />
<table class="table table-striped table-responsive">

    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Contact
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pub_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pub_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pub_contact)
            </td>
            <td>

                <a class="btn btn-success btn-sm" href="@Url.Action("Edit", new { id = item.pub_id })">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.pub_id })">Delete</a>


                <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.pub_id })">Details</a>

</td>
        </tr>
    }

</table>
