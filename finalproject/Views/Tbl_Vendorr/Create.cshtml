@model finalproject.Models.Tbl_Vendorr

@if (Session["Admin_id"] != null && Session["Admin_email"] != null)
{
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}
else{
    ViewBag.Title = "Create";
}

<h2>Add Vendor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Vendor Name</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor Email</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor Password</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor Contact</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_contactno, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_contactno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor status</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor Address</label> <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_ShopAdr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendor_ShopAdr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Admin</label> <br />
            <div class="col-md-10">

                @ViewBag.adminname
                @*@Html.DropDownList("Admin_id", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Admin_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

