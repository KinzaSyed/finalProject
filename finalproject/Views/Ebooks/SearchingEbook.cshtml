@model IEnumerable<finalproject.Models.Ebooks_db>
@{
    ViewBag.Title = "SearchingEbook";
}

<h2>Ebook Collection</h2>




<nav class="navbar navbar-light bg-light">
    @using (Html.BeginForm("SearchingEbook", "Ebooks", FormMethod.Get))
    {@Html.TextBox("search") <input type="submit" value="Search" /><br  /><br />
    <b>Search By</b>
    @Html.RadioButton("searchBy", "Book_name") <text>Name</text>
    @Html.RadioButton("searchBy", "cat_name") <text>Category</text>
    @Html.RadioButton("searchBy", "pub_name") <text>Publisher</text>


}


</nav>


<table class="table table-striped table-responsive">

    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Edition</th>
            <th>Price</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Category</th>
            <th>Vendor</th>

        </tr>





    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="8">No Book Found</td>
        </tr>
    }
    else
    {

        <tbody>
            @if (Model != null)
            {

                foreach (var item in Model)

                {
                    <tr>

                        <td><img style="width:50px;height:50px;" src="@Url.Content(item.Ebook_img)" /></td>
                        <td>@item.Ebook_name</td>
                        <td>@item.Ebook_edition</td>
                        <td>@item.Ebook_author</td>
                        <td>@item.Ebook_publisher</td>
                        <td>@item.Book_categoryy.cat_name</td>
                        <td>@item.tbl_member.mem_name</td>
                        <td>






                            <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.Ebook_id })">Details</a>

                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9">No Result Found...</td>
                </tr>
            }




        </tbody>

    }





</table>
