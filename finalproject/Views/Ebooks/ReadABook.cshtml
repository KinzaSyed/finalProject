@model IEnumerable<finalproject.Models.Tbl_for_Ebooks>
@{
    ViewBag.Title = "ReadABook";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="row" style="margin-bottom: 100%;">


    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4" style="height:300px;margin-top:100px;margin-bottom:100px ">
                <img class="img-rounded img-responsive cimg" style="height:100%; width:100%; " src="@Url.Content(item.Ebook_img)" />
                <h4 style="color:#808080;font-family:'Arial Rounded MT' ;text-align: center">@item.Ebook_name <small> @item.cat_name</small></h4>
                <h3 style="text-align: center; "><a class="btn btn-success btn-sm" href="@Url.Action("addtoReadings", new { id = item.Ebook_id })"><i style="font-size:24px" class="fa">&#xf07a;</i>Add to Readings</a></h3>
                <h3 style="text-align: center; "><a class="btn btn-info btn-sm" href="@Url.Action("Details", "Ebooks",new { id = item.Ebook_id })">Details</a></h3>
                <br />
                <br />
            </div>
        }


    }




</div>


