@model finalproject.Models.Tbl_for_Ebooks
@{
    ViewBag.Title = "Create";
}

<h2>Book Information</h2>
@using (Html.BeginForm("Create", "Ebooks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{




    <div class="container" style="border:inset dotted black">
        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2" for="email">Book Name</label>

                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Ebook_name, new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.Ebook_name)



                    </div>
                </div>


            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="email">Publisher Name</label>

                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Ebook_publisher, new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.Ebook_publisher)



                    </div>
                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="email">Author Name</label>

                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Ebook_author, new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.Ebook_author)



                    </div>
                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="email">Category</label>

                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.cat_id, ViewBag.catlist as SelectList, "--Select--", new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.cat_name)



                    </div>
                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="email">Book Image</label>
                <div class="col-md-10">
                    <input type="file" name="imagefile" id="imagefile" required="required" class="form-control" />

                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="email">Upload Book</label>
                <div class="col-md-10">
                    <input type="file" name="pdffile" id="pdffile" required="required" class="form-control" />

                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="email">Edition Name</label>

                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Ebook_edition, new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.Ebook_edition)



                    </div>
                </div>


            </div>

            @*<div class="form-group">
                <label class="control-label col-md-2" for="email">Member</label>

                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.mem_id, ViewBag.memlist as SelectList, "--Select--", new { @class = "form-control" })
                    <div style="color:red">
                        @Html.ValidationMessageFor(x => x.mem_name)



                    </div>
                </div>



            </div>*@



            <div class="form-group">
                <div class="col-md-offset-3 col-md-2">
                    <input type="submit" value="Add" class="btn btn-block btn-success" />

                </div>


            </div>


        </div>


    </div>



}
