@model IEnumerable<finalproject.Models.Tbl_for_Ebooks>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a class="btn btn-info btn-lg" href="@Url.Action("Create")">Add new EBook</a>


<table class="table table-striped table-responsive">

    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Publisher</th>
            <th>Author</th>
            <th>Category</th>
            <th>PDF</th>
            <th>Edition</th>
            <th>Member Name</th>

        </tr>





    </thead>
    <tbody>
        @if (Model != null)
        {

       
            foreach (var item in Model)
            {
                <tr>

                    <td><img style="width:50px;height:50px;" src="@Url.Content(item.Ebook_img)" /></td>
                    <td>@item.Ebook_name</td>
                    <td>@item.Ebook_publisher</td>
                    <td>@item.Ebook_author</td>
                    <td>@item.cat_name</td>
                    <td><a target="_blank" href="@Url.Content(item.Ebook_pdffile)">PDF Book</a></td>
                    <td>@item.Ebook_edition</td>
                    <td>@item.mem_name</td>
                    <td>




                        <a class="btn btn-success btn-sm" href="@Url.Action("Edit", new { id = item.Ebook_id })">Edit</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Ebook_id })">Delete</a>


                        <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.Ebook_id })">Details</a>

                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">No Result Found...</td>
            </tr>
        }




    </tbody>







</table>
