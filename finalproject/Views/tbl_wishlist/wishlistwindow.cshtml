
@model IEnumerable<finalproject.Models.tbl_wishlist>


<div class="container">
    @*<button type="button" class="btn btn-success btn-sm" data-target="#MyModal" data-toggle="modal">Show Wishlist window</button>*@






    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="float:right">Wish List</button>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Your Wishlist</h4>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>
                                Book Cover
                            </th>


                            <th>
                                Book Name
                            </th>

                            <th>
                                Wish Date
                            </th>

                            @*<th>
            @Html.DisplayNameFor(model => model.tbl_member.mem_name)
        </th>*@
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><img style="width:50px;height:50px;" src="@Url.Content(item.Tbl_Books.Book_img)" /></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tbl_Books.Book_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Wish_date)
                            </td>

                            @*<td>
            @Html.DisplayFor(modelItem => item.tbl_member.mem_name)
        </td>*@
                            <td>

                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Wish_Id})">Delete</a>
                            </td>
                        </tr>
                        }

                    </table>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>










