
@model IEnumerable<finalproject.Models.tbl_wishlist>


<div class="container">
    <button type="button" class="btn btn-success btn-sm" data-target="#MyModal" data-toggle="modal">Show Wishlist window</button>

    <div class="modal" id="MyModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h3>Your Wishlist</h3>

                </div>
                <div class="modal-body">
                    <p>wishlist</p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Wish_date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tbl_Books.Book_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tbl_member.mem_name)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Wish_date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tbl_Books.Book_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbl_member.mem_name)
                                </td>
                                <td>

                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Wish_Id})">Delete</a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
                @*<div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal">
                        close
                    </button>

                </div>*@

            </div>

        </div>
    </div>


</div>
