
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@if (TempData["msg"] !=  null)
{
<div class="alert alert-success alert-dismissable" >
   <button type="button" class="close" data-dismiss="alert"></button>
    <strong>Success</strong>@TempData["msg"]
</div>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10">
        @if (TempData["totalprice"] == null)
        {
        <h3>
            Total Bill: 0 Rs
        </h3>
                
        }
        else
        {

        <h3>Total Bill: @TempData["totalprice"] </h3>



        }





    </div>
    <div class="col-md-2 col-md-2 col-sm-2">
        <h3 style="color:#808080;font-family:'Arial Rounded MT' ; text-align: center"><span class="btn btn-info">@Html.ActionLink("Check Out", "CheckOut","AddtoCart")</span></h3>
    </div>

    </div>

<div class="row" style="margin-bottom: 100%;">

    @if (Model != null)
    {

        foreach (var item in Model)
        {
                <div class="col-lg-4 col-md-4" style="height:300px;margin-top:100px;margin-bottom:100px ">
        <img class="img-rounded img-responsive cimg" style="height:100%; width:100%; " src="@Url.Content(item.Book_img)" />
        <h4 style="color:#808080;font-family:'Arial Rounded MT' ;text-align: center">@item.Book_name <small> @item.Book_price Rs</small></h4>
        <h3 style="text-align: center; "><a class="btn btn-success btn-sm" href="@Url.Action("addtocart", new { id = item.Book_id })"><i style="font-size:24px" class="fa">&#xf07a;</i>&nbsp; Add to Cart</a>
        <a class="btn btn-warning" href="@Url.Action("Create","tbl_wishlist")">Add to Wishlist</a> </h3>
        <h3 style="text-align: center; "><a class="btn btn-info btn-sm" href="@Url.Action("Details", "Tbl_Book",new { id = item.Book_id })">Details</a></h3>
            <br />
            <br />
</div>
        }


    }




</div>

